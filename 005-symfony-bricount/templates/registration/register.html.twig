{% extends 'base.html.twig' %}

{% block title %}Inscription - Bricount{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4">

                        {# Titre / Logo #}
                        <div class="text-center mb-4">
                            <h1 class="h3 mb-3 font-weight-normal">Bricount</h1>
                            <p class="text-muted">Créer un nouveau compte</p>
                        </div>

                        {# Affichage des erreurs globales du formulaire #}
                        {% if form_errors(registrationForm) %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(registrationForm) }}
                            </div>
                        {% endif %}

                        {{ form_start(registrationForm) }}

                        {# Champ Email #}
                        {{ form_row(registrationForm.email, {
                            'label': 'Adresse Email',
                            'label_attr': {'class': 'form-label'},
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'exemple@email.com'
                            },
                            'row_attr': {'class': 'mb-3'}
                        }) }}

                        {# Champ Mot de passe #}
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Mot de passe',
                            'label_attr': {'class': 'form-label'},
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Votre mot de passe'
                            },
                            'row_attr': {'class': 'mb-3'}
                        }) }}

                        {# Case à cocher (Conditions d'utilisation) #}
                        <div class="mb-3">
                            <div class="form-check">
                                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                <label class="form-check-label text-muted small"
                                       for="{{ registrationForm.agreeTerms.vars.id }}">
                                    J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a>
                                </label>
                                {{ form_errors(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        {# Bouton d'inscription #}
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                S'inscrire
                            </button>
                        </div>

                        {# Lien vers Login #}
                        <div class="text-center mt-3">
                            <span class="text-muted small">Vous avez déjà un compte ?</span>
                            <a href="{{ path('login') }}" class="text-decoration-none small">Se connecter</a>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
