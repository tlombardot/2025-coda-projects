{% extends 'base.html.twig' %}

{% block title %}Connexion - Bricount{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4">

                        {# Titre / Logo #}
                        <div class="text-center mb-4">
                            <h1 class="h3 mb-3 font-weight-normal">Bricount</h1>
                            <p class="text-muted">Connectez-vous à votre espace</p>
                        </div>

                        <form method="post">
                            {# Gestion des erreurs #}
                            {% if error %}
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                </div>
                            {% endif %}

                            {# Message si déjà connecté #}
                            {% if app.user %}
                                <div class="alert alert-info mb-3">
                                    Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }},
                                    <a href="{{ path('logout') }}" class="alert-link">Se déconnecter</a>
                                </div>
                            {% endif %}

                            {# Champ Email #}
                            <div class="mb-3">
                                <label for="username" class="form-label">Adresse Email</label>
                                <input type="email"
                                       value="{{ last_username }}"
                                       name="_username"
                                       id="username"
                                       class="form-control form-control-lg"
                                       placeholder="exemple@email.com"
                                       autocomplete="email"
                                       required
                                       autofocus>
                            </div>

                            {# Champ Mot de passe #}
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    {# Lien oublié (optionnel pour plus tard) #}
                                    {# <a href="#" class="text-decoration-none small">Mot de passe oublié ?</a> #}
                                </div>
                                <input type="password"
                                       name="_password"
                                       id="password"
                                       class="form-control form-control-lg"
                                       placeholder="Votre mot de passe"
                                       autocomplete="current-password"
                                       required>
                            </div>

                            {# Token CSRF (Important pour la sécurité) #}
                            <input type="hidden" name="_csrf_token"
                                   data-controller="csrf-protection"
                                   value="{{ csrf_token('authenticate') }}">

                            {# Checkbox se souvenir de moi #}
                            <div class="form-check mb-3">
                                <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
                                <label for="_remember_me" class="form-check-label text-muted">Se souvenir de moi</label>
                            </div>

                            {# Bouton de soumission #}
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    Se connecter
                                </button>
                            </div>

                            {# Lien inscription (optionnel pour plus tard) #}
                            <div class="text-center mt-3">
                                <span class="text-muted small">Pas encore de compte ?</span>
                                <a href="{{ path('register') }}" class="text-decoration-none small">S'inscrire</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
